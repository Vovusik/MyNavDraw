<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_drawable_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    card_view:cardCornerRadius="4dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rowBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="3"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/textColorPrimary"
            tools:text="Винний підвал" />
        <TextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/textColorSecondary"
            tools:text="м. Ужгород, вул. Волошина, 18Б" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <Button
                    android:id="@+id/web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textColorPrimary"
                    android:drawableTop="@drawable/selector_link"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="Веб-сайт"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textColorPrimary"
                    android:drawableTop="@drawable/selector_call"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="Виклик"
                    android:textColor="@color/textColorPrimary" />

                <Button
                    android:id="@+id/directions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/textColorPrimary"
                    android:drawableTop="@drawable/selector_direction"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="Маршрут"
                    android:textColor="@color/textColorPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/location_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</android.support.v7.widget.CardView>