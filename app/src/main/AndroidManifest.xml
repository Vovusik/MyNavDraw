<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.andrukhiv.mynavigationdrawer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Підтримка ярликів швидкого доступу до розділів додатку -->
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <activity
            android:name=".VarietiesDetailsActivity"
            android:theme="@style/DetailTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".KitchenActivity"
            android:label="@string/name_kitchen" />

        <activity
            android:name=".ReproductionActivity"
            android:label="@string/name_reproduction" />

        <activity android:name=".FormationActivity"
            android:label="@string/name_formation"/>

        <activity android:name=".RegionActivity"
            android:label="@string/name_region"/>

        <activity android:name=".LibraryActivity"
            android:label="@string/name_library"/>

        <activity android:name=".SortableActivity"
            android:label="@string/name_specification"
            android:screenOrientation="sensorLandscape"/>

        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <!--Для використання сповіщеннь Firebase-->
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>

        </service>

        <!-- Встановити спеціальний значок за замовчуванням. Це використовується, коли для вхідних
         повідомлень не встановлено піктограму. Див. README (https://goo.gl/l4GJaQ) для
         отримання додаткової інформації. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/dialog_icon_logo" />
        <!-- Встановити колір, який використовується з вхідними повідомленнями.
        Це використовується, якщо для вхідного не встановлено жодного кольору повідомлення
        про повідомлення Див. README (https://goo.gl/6BKBk7) для отримання додаткової інформації. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <activity
            android:name="SettingActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Preference"/>


    </application>

</manifest>